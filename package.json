    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.6",
    "@nestjs/swagger": "^8.0.2",
    "@prisma/client": "^5.21.1",
    "@types/multer": "^1.4.12",
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.5.1",
    "multer": "^1.4.5-lts.1",
    "nest-winston": "^1.9.7",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "streamifier": "^0.1.1",
